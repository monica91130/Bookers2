
<div class="col-xs-3">

	<div class="notice">
		<% if flash[:notice] %>
		  	<p><%= flash[:notice] %></p>
		<% end %>
	</div>

	<h2>User info</h2>
	<div class="profile_image">
		<%= attachment_image_tag user, :profile_image, :fill,100,100, format: 'jpeg', class: "attachment user profile-img", fallback: "no_image.jpg" %>
	</div>

	<table class="table">
			<tbody>
				<tr>
  				<th>name</th>

  				<th><%= user.name %></th>
				</tr>
				<tr>
  				<th>introduction</th>
  				<th><%= user.introduction %></th>
				</tr>
		</tbody>
	</table>
	<div class="row">
		<%= link_to '', edit_user_path(current_user.id), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>
	</div>

	<h2>New book</h2>
	<%= form_for(book) do |f| %>
		<label for="book_title">Title</label><br>
		<%= f.text_field :title, class: "book_title" %><br>
		<label for="book_body">Body</label><br>
		<%= f.text_area :body, class: "book_body" %><br>
		<%= f.submit 'Create book' %>
	<% end %>

	<% if book.errors.any? %>
      <div id="error_explanation" class="alert alert-danger">
        <h2><%= pluralize(book.errors.count, "error") %> prohibited this book from being saved:</h2>
        <ul>
          <% book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

</div>