<body>
    <h1>Editing Book</h1>

<%= form_for(@book) do |f| %>

  <div class="field">
    <label for="book_title">Title</label>
    <%= f.text_field :title, class: "book_title" %>
  </div>

  <div class="field">
    <label for="book_body">Body</label>
    <%= f.text_field :body, class: "book_body" %>
  </div>

  <div class="actions">
    <%= f.submit 'submit' %>
  </div>

 <% end %>


<%= link_to "Show", book_path(@book.id), class: "show_#{@book.id}" %> |
<%= link_to "Back", books_path, class: "back" %>

</body>