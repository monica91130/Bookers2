<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h1>Editing Book</h1>

    <%= form_for(@book) do |f| %>

      <div class="field">
        <label for="book_title">Title</label>
        <%= f.text_field :title, class: "col-xs-12" %>
      </div>

      <div class="field">
        <label for="book_body">Opinion</label>
        <%= f.text_field :body, class: "col-xs-12" %>
      </div>

      <div class="actions">
        <%= f.submit 'submit', class: "btn btn-primary col-xs-12" %>
      </div>

    <% end %>


    <%= link_to "Show", book_path(@book.id), class: "show_#{@book.id}" %> |
    <%= link_to "Back", books_path, class: "back" %>
  </div>
</div>